# Database
DATABASE_PATH=sessions.db
DATABASE_URL=sqlite:///sessions.db

# OpenAI (for AI insights)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Streak Settings
STREAK_RESET_HOURS=48
DAILY_GOAL_PROBLEMS=3
WEEKLY_GOAL_PROBLEMS=15

# Analytics
DEFAULT_TIME_RANGE=7  # days
BEST_TIME_WINDOW=2  # hours for peak time analysis

# Export
EXPORT_DIR=reports/
DEFAULT_EXPORT_FORMAT=markdown

# Integration
GAMIFICATION_ENDPOINT=http://localhost:8000
PATTERN_TRAINER_DB=../leetcode-pattern-trainer/progress.db

# UI
COLOR_OUTPUT=true
ENABLE_EMOJI=true
SHOW_GRAPHS=true

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/analyzer.log
