# OpenAI Configuration (optional - for AI-generated explanations)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Database
DATABASE_PATH=progress.db
DATABASE_URL=sqlite:///progress.db

# Spaced Repetition Settings (SM-2 Algorithm)
SM2_INITIAL_INTERVAL=1  # days
SM2_GRADUATION_INTERVAL=4  # days after first success
SM2_MAX_INTERVAL=365  # maximum days between reviews
MASTERY_THRESHOLD=90  # percentage to consider pattern "mastered"
EASY_BONUS=1.3  # multiplier for easy reviews
HARD_PENALTY=0.8  # multiplier for hard reviews

# Drill Settings
DEFAULT_DRILL_COUNT=20
ENABLE_TIMED_DRILLS=true
DRILL_TIME_LIMIT=30  # seconds per question
MIN_DRILL_TIME=5  # minimum seconds to avoid rushing
SHOW_HINTS=true  # allow hints during drills

# Progress Tracking
STREAK_RESET_HOURS=48  # hours before streak resets
DAILY_DRILL_GOAL=10  # drills per day goal
WEEKLY_DRILL_GOAL=70
DAILY_PATTERN_GOAL=2  # patterns to review per day

# Learning Settings
INITIAL_PATTERN_EXPOSURE=3  # times to see pattern before mastery tracking
CONFIDENCE_THRESHOLD=3  # consecutive correct answers to mark as "confident"
SHUFFLE_DRILLS=true  # randomize drill order

# UI Settings
COLOR_OUTPUT=true
ENABLE_EMOJI=true
PROGRESS_BAR_WIDTH=20
SHOW_DETAILED_FEEDBACK=true

# Integration
SESSION_ANALYZER_DB=../leetcode-session-analyzer/sessions.db
GAMIFICATION_ENDPOINT=http://localhost:8000
EXPORT_FORMAT=markdown  # markdown, json, csv

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/trainer.log
