# Project Settings
PROJECTS_ROOT=/home/user/fantastic-engine/projects
INCLUDE_PROJECTS=  # Empty = all projects, or comma-separated list
EXCLUDE_PROJECTS=shared-utils,graduated,templates

# Parsing Settings
PROGRESS_INDICATOR_REGEX=- \[(x|X)\]  # Completed checkbox regex
TODO_INDICATOR_REGEX=- \[ \]           # Incomplete checkbox regex
TIME_LOG_FORMAT=YYYY-MM-DD HH:MM       # Time entry format

# Dashboard Settings
DEFAULT_OUTPUT=terminal  # terminal, html, json
TERMINAL_WIDTH=120
TERMINAL_REFRESH_RATE=1  # seconds (watch mode)
SHOW_VELOCITY_CHART=true
SHOW_BURNDOWN=true
SHOW_TIME_DISTRIBUTION=true

# Milestone Settings
WEEKLY_GOAL_HOURS=10
WARN_IF_BEHIND=true
MILESTONE_WEEK_START=Monday  # Day of week

# HTML Report
HTML_OUTPUT_PATH=./reports/dashboard.html
HTML_TEMPLATE=./src/templates/dashboard.html
AUTO_OPEN_BROWSER=true
CHART_THEME=plotly_dark  # plotly, plotly_white, plotly_dark

# Notifications (future)
ENABLE_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/tracker.log
