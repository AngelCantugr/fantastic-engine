# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
MODEL_NAME=gpt-4-turbo-preview
TEMPERATURE=0.7
MAX_TOKENS=2000

# LangChain Configuration (Optional)
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=multi-agent-sdlc

# Deployment Configuration
DEPLOYMENT_MODE=dry_run  # Options: dry_run, staging, production
TARGET_ENVIRONMENT=staging

# Safety Configuration
MAX_RETRIES=3
RETRY_DELAY=1  # seconds
TIMEOUT=300  # seconds
MAX_ACTIONS_PER_HOUR=100

# Agent Configuration
CODE_REVIEW_SEVERITY_THRESHOLD=warning  # Options: info, warning, error, critical
TEST_COVERAGE_TARGET=80  # percentage
ENABLE_AUTO_DEPLOYMENT=false

# Monitoring Configuration
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Cost Tracking
MAX_COST_PER_RUN=5.00  # USD
WARN_COST_THRESHOLD=3.00  # USD

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60  # seconds
CIRCUIT_BREAKER_HALF_OPEN_TIMEOUT=30  # seconds

# Git Repository Configuration
GIT_REPO_PATH=/path/to/your/repo
GIT_MAIN_BRANCH=main
GIT_REQUIRE_APPROVAL=true

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=
