# Pricing Configuration (auto-updated from APIs)
OPENAI_PRICING_URL=https://openai.com/api/pricing
ANTHROPIC_PRICING_URL=https://anthropic.com/api/pricing
UPDATE_PRICING_ON_START=true

# Analysis Settings
DEFAULT_MODEL=gpt-4
SIMILARITY_THRESHOLD=0.85  # For detecting duplicate prompts (0.0-1.0)
CACHE_OPPORTUNITY_MIN_OCCURRENCES=3  # Min times a prompt must appear to suggest caching
MIN_SAVINGS_TO_REPORT=10.00  # USD - minimum savings to include in report

# Optimization Thresholds
MAX_TOKENS_WASTE_THRESHOLD=0.2  # 20% unused tokens triggers recommendation
PROMPT_COMPRESSION_MIN_TOKENS=1000  # Only suggest compression for prompts over this size
BATCH_SIZE_RECOMMENDATION=10  # Suggested batch size for batch processing
MODEL_DOWNGRADE_CONFIDENCE=0.9  # Confidence threshold for model recommendations

# Output Settings
OUTPUT_FORMAT=terminal  # Options: terminal, html, json, csv
REPORT_DIR=./reports
INCLUDE_CHARTS=true
TOP_N_RECOMMENDATIONS=20
COLORIZE_OUTPUT=true

# Currency
CURRENCY=USD
CURRENCY_SYMBOL=$

# Time Periods
DEFAULT_TIME_RANGE=30  # days
GROUP_BY_PERIOD=day  # Options: hour, day, week, month

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/cost-optimizer.log
VERBOSE=false

# Cache Settings (for the tool itself)
ENABLE_CACHE=true
CACHE_DIR=./cache
CACHE_TTL=3600  # seconds

# API Keys (optional - only needed for real-time pricing updates)
OPENAI_API_KEY=  # Optional
ANTHROPIC_API_KEY=  # Optional
