# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Bot Configuration
BOT_PERSONALITY=peer  # teacher, coach, peer, interviewer, zen
DEFAULT_MODE=collaborative  # collaborative, interview, socratic

# Voice Settings (optional)
ENABLE_VOICE=false
VOICE_SPEED=1.0
VOICE_GENDER=neutral
ELEVENLABS_API_KEY=your-elevenlabs-key

# Behavior
ENCOURAGEMENT_FREQUENCY=medium
ALLOW_DIRECT_ANSWERS=false
CELEBRATION_LEVEL=high
SOCRATIC_MODE_ENABLED=true

# Database
DATABASE_PATH=pair_sessions.db

# Integration
HINT_SYSTEM_PATH=../leetcode-hints
VISUALIZER_PATH=../leetcode-trace-visualizer
GAMIFICATION_ENDPOINT=http://localhost:8000

# Real-time
WEBSOCKET_PORT=8765
ENABLE_REALTIME=true

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/pair_bot.log
