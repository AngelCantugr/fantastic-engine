# OpenAI (optional - for explanations)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Visualization Settings
ENABLE_ANIMATIONS=true
ANIMATION_FPS=2
TERMINAL_WIDTH=120
COLOR_SCHEME=cyberpunk

# Display Options
SHOW_LINE_NUMBERS=true
SHOW_VARIABLE_TYPES=true
HIGHLIGHT_CHANGED_VARS=true
MAX_ARRAY_SIZE_DISPLAY=20

# Export Settings
VIDEO_QUALITY=high
VIDEO_FORMAT=mp4
DIAGRAM_FORMAT=png
EXPORT_DIR=exports/

# Performance
MAX_TRACE_STEPS=1000
ENABLE_CACHING=true

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/visualizer.log
