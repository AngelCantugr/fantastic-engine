# Integration
SESSION_ANALYZER_DB=../leetcode-session-analyzer/sessions.db
GAMIFICATION_ENDPOINT=http://localhost:8000

# Export
EXPORT_FORMAT=ical  # ical, markdown, json
EXPORT_DIR=exports/

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/planner.log
