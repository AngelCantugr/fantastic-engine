# Data Sources
EXPERIMENTS_DIR=~/experiments
DAILY_NOTES_DIR=~/daily-notes
POMODORO_LOGS_DIR=~/pomodoro-logs

# Parsing Configuration
DATE_FORMAT=%Y-%m-%d
FRONTMATTER_REQUIRED=false
VALIDATE_METRICS=true
ALLOW_MISSING_FIELDS=true

# Analysis Settings
MIN_DATA_POINTS=7  # Need at least 1 week of data for trends
TREND_WINDOW=7  # days for moving average
CORRELATION_THRESHOLD=0.6  # Minimum correlation to report
ANOMALY_SENSITIVITY=2.0  # standard deviations for anomaly detection

# AI Insights (Optional)
ENABLE_AI_INSIGHTS=false
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
AI_MODEL=gpt-4
AI_PROVIDER=openai  # openai or anthropic
MAX_INSIGHT_TOKENS=500

# Visualization
CHART_THEME=plotly_dark  # Options: plotly, plotly_dark, plotly_white, ggplot2, seaborn
COLOR_PALETTE=viridis  # Options: viridis, plasma, inferno, magma, cividis
FIGURE_WIDTH=1200
FIGURE_HEIGHT=600
DPI=100

# Output Settings
OUTPUT_FORMAT=terminal  # Options: terminal, html, both
REPORT_DIR=./reports
AUTO_OPEN_HTML=true
EXPORT_JSON=true
EXPORT_CSV=true

# Terminal Dashboard
REFRESH_INTERVAL=0  # seconds (0 = no auto-refresh)
COMPACT_MODE=false
SHOW_RAW_DATA=false
MAX_ROWS_DISPLAY=50

# Metrics Configuration
REQUIRED_METRICS=date,Time-Boxed Sessions,Tasks Completed,Energy Level,Joy Rating
OPTIONAL_METRICS=Rabbit Holes,Context Switches,Deep Work Blocks

# Notifications
ENABLE_WEEKLY_SUMMARY=true
SUMMARY_DAY=sunday  # Day of week to send summary
EMAIL_ENABLED=false
EMAIL_TO=
EMAIL_FROM=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/tracker.log
VERBOSE=false

# Cache
ENABLE_CACHE=true
CACHE_DIR=./cache
CACHE_TTL=3600  # seconds
