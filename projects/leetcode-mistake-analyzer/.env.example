# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Database
DATABASE_PATH=mistakes.db

# Analysis Settings
TRACK_ALL_MISTAKES=true
ENABLE_PRE_SUBMIT_CHECK=true
SHOW_IMPROVEMENT_STATS=true

# Pattern Detection
MIN_PATTERN_OCCURRENCES=3
PATTERN_LOOKBACK_DAYS=30

# Integration
SESSION_ANALYZER_DB=../leetcode-session-analyzer/sessions.db
TRACE_VISUALIZER_PATH=../leetcode-trace-visualizer

# UI
COLOR_OUTPUT=true
ENABLE_EMOJI=true
SHOW_CODE_DIFF=true

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/analyzer.log
