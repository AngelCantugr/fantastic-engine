# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://chatuser:password@localhost:5432/chatdb
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ADAPTER_KEY=socket.io

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=chat-server
KAFKA_GROUP_ID=chat-consumers
KAFKA_TOPIC_MESSAGES=chat-messages
KAFKA_TOPIC_ANALYTICS=chat-analytics
KAFKA_PARTITIONS=10
KAFKA_REPLICATION_FACTOR=3

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:8080
WS_MAX_CONNECTIONS=10000
WS_PING_TIMEOUT=5000
WS_PING_INTERVAL=25000

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRATION=24h
SESSION_SECRET=your-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_MESSAGES=60
RATE_LIMIT_MAX_CONNECTIONS=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_TYPING_INDICATORS=true
ENABLE_READ_RECEIPTS=true
ENABLE_MESSAGE_EDITING=true
ENABLE_FILE_UPLOADS=false

# Message Configuration
MAX_MESSAGE_LENGTH=5000
MESSAGE_HISTORY_LIMIT=100
TYPING_INDICATOR_TIMEOUT=5000

# Performance Tuning
MESSAGE_BATCH_SIZE=10
MESSAGE_BATCH_INTERVAL=100
KAFKA_CONSUMER_BATCH_SIZE=100
