{
  "name": "realtime-chat",
  "version": "1.0.0",
  "description": "Scalable real-time chat system with WebSockets, Kafka, and Redis",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "node -r tsx/register src/db/migrate.ts",
    "db:seed": "node -r tsx/register src/db/seed.ts",
    "load:test": "artillery run artillery.yml"
  },
  "keywords": [
    "websocket",
    "chat",
    "real-time",
    "socket.io",
    "kafka",
    "redis",
    "scalable"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "socket.io": "^4.6.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "artillery": "^2.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.6.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
