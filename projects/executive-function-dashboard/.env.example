# ADHD Executive Function Dashboard - Environment Variables
# Copy this file to .env and fill in your values

# TickTick MCP Server Configuration
# Get your API key from TickTick developer console
TICKTICK_API_KEY=your_api_key_here
TICKTICK_USERNAME=your_username

# Pomodoro Timer Settings
# Customize your work/break intervals (in minutes)
POMODORO_WORK_MINUTES=25
POMODORO_BREAK_MINUTES=5
POMODORO_LONG_BREAK_MINUTES=15
POMODORO_SESSIONS_BEFORE_LONG_BREAK=4

# Dashboard Display Settings
# How often to refresh dashboard data (in seconds)
REFRESH_INTERVAL_SECONDS=300  # 5 minutes

# Color theme: cyberpunk, nord, monokai, dracula
THEME=cyberpunk

# Data Storage
# Path to SQLite database for energy logs and patterns
DATABASE_PATH=./data/dashboard.db

# Optional: Logging
# Set to DEBUG, INFO, WARNING, or ERROR
LOG_LEVEL=INFO
LOG_FILE=./data/dashboard.log

# Optional: Advanced Settings
# Maximum number of tasks to display in each section
MAX_OVERDUE_TASKS=3
MAX_TODAY_TASKS=5
MAX_QUICK_WINS=3

# Time zone for task due dates
TIMEZONE=America/Los_Angeles
