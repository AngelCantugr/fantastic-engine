# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_REPO=owner/repo

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo for cheaper reviews

# Review Settings
MAX_FILES_PER_REVIEW=20
MAX_LINES_PER_CHUNK=100
REVIEW_CATEGORIES=bugs,security,style,performance,documentation

# Severity thresholds
MIN_SEVERITY=LOW  # LOW, MEDIUM, HIGH, CRITICAL
AUTO_APPROVE_IF_NO_ISSUES=false

# Cost Tracking
COST_DB_PATH=./data/cost_tracking.db
MAX_COST_PER_REVIEW=1.00  # USD - abort if exceeded
TRACK_COSTS=true

# Webhook Server (optional)
WEBHOOK_PORT=8080
WEBHOOK_SECRET=your-webhook-secret-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pr_review.log
