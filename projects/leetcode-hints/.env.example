# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Database
DATABASE_PATH=hints.db

# Hint Pacing (seconds)
LEVEL_1_COOLDOWN=300
LEVEL_2_COOLDOWN=600
LEVEL_3_COOLDOWN=900
LEVEL_4_COOLDOWN=1200
LEVEL_5_COOLDOWN=0

# Recommendations (seconds)
RECOMMEND_WAIT_LEVEL_1=300
RECOMMEND_WAIT_LEVEL_2=600
RECOMMEND_WAIT_LEVEL_3=900

# Tracking
TRACK_HINT_EFFECTIVENESS=true
ENABLE_HINT_ANALYTICS=true

# Default Mode
DEFAULT_HINT_MODE=balanced  # minimal, balanced, detailed, socratic

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/hints.log
