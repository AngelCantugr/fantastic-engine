# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo for cheaper

# Input Settings
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
INCLUDE_TAGS=learning,study,technical  # Optional: only process notes with these tags
EXCLUDE_TAGS=private,draft,archive
INCLUDE_FOLDERS=Learning,Technical  # Optional: only process these folders

# Card Generation Settings
CARD_TYPES=basic,cloze,code
MAX_CARDS_PER_NOTE=20
MIN_CARD_QUALITY=7  # 1-10 scale, cards below this are filtered
SKIP_CODE_BLOCKS=false
SKIP_IMAGES=false

# Anki Settings
ANKI_DECK=Default
ANKI_MODEL=Basic
OUTPUT_CSV_PATH=./output/anki_cards.csv
ADD_SOURCE_LINK=true  # Add link back to original note

# Quality Control
REQUIRE_REVIEW=false  # If true, prompts for manual review before export
AUTO_TAG=true  # Automatically add tags from Obsidian frontmatter

# Cost Management
TRACK_COSTS=true
MAX_COST_PER_RUN=5.00  # USD - abort if exceeded
WARN_THRESHOLD=2.00  # Warn when approaching limit

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/generator.log
