# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
ENABLE_SEMANTIC_SIMILARITY=true

# Similarity Weights
PATTERN_WEIGHT=0.40
STRUCTURAL_WEIGHT=0.30
SEMANTIC_WEIGHT=0.30

# Filtering
MIN_SIMILARITY=0.60
MAX_RESULTS=10
INCLUDE_SOLVED=false

# Learning Paths
PATH_LENGTH=10
DIFFICULTY_PROGRESSION=gradual  # gradual, aggressive, mixed

# Database
DATABASE_PATH=similar_problems.db

# Caching
ENABLE_CACHING=true
CACHE_TTL_DAYS=30

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/similar.log
