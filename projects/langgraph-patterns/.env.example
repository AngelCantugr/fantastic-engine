# LLM Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Default Model Configuration
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_STREAMING=true

# State Persistence
STATE_BACKEND=sqlite  # Options: sqlite, redis, memory
STATE_DB_PATH=./data/state.db
REDIS_URL=redis://localhost:6379  # Only needed if using Redis backend

# Observability (Optional)
LANGSMITH_API_KEY=ls-...
LANGSMITH_PROJECT=langgraph-patterns
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Pattern Generator Settings
TEMPLATES_DIR=./templates
OUTPUT_DIR=./generated
DEFAULT_PATTERN=react

# Error Handling Defaults
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/langgraph-patterns.log
