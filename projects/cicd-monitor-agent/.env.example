# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token
GITHUB_REPO=owner/repo
GITHUB_WORKFLOW_NAME=  # Leave empty to monitor all workflows

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview  # or gpt-3.5-turbo

# Notification Channels
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=true
GITHUB_CREATE_ISSUES=false
EMAIL_ENABLED=false
EMAIL_TO=your-email@example.com
EMAIL_FROM=monitor@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring Settings
POLL_INTERVAL_SECONDS=60
MAX_LOG_LENGTH=5000
IGNORE_SUCCESS=true
MONITOR_BRANCHES=main,develop  # Comma-separated, empty = all

# ReAct Settings
MAX_REASONING_STEPS=5
ENABLE_REACT=true
REACT_TEMPERATURE=0.2

# Pattern Tracking
PATTERN_DB_PATH=./data/patterns.db
LEARN_FROM_HISTORY=true
MIN_PATTERN_OCCURRENCES=3

# Cost Management
MAX_COST_PER_ANALYSIS=0.50  # USD
TRACK_COSTS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/monitor.log
