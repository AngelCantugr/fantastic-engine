# Obsidian Configuration
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# TickTick MCP Server Configuration
TICKTICK_MCP_URL=http://localhost:3000
TICKTICK_MCP_TIMEOUT=30

# Sync Settings
SYNC_INTERVAL_SECONDS=300
AUTO_SYNC=true
DRY_RUN=false

# Conflict Resolution
# Options: last_modified, obsidian_wins, ticktick_wins
CONFLICT_STRATEGY=last_modified

# Logging
LOG_LEVEL=INFO
LOG_FILE=sync.log

# Database
DATABASE_PATH=sync_state.db

# Performance
MAX_CONCURRENT_SYNCS=5
BATCH_SIZE=50
