# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
MODEL_NAME=gpt-4-turbo-preview
TEMPERATURE=0.3  # Lower for more deterministic responses
MAX_TOKENS=2000

# LangChain Configuration (Optional)
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=production-guardian

# Monitoring Configuration
LOG_FILE_PATH=/var/log/application/app.log
METRICS_ENDPOINT=http://prometheus:9090
CHECK_INTERVAL=30  # seconds
ENABLE_LOG_MONITORING=true
ENABLE_METRICS_MONITORING=true

# Safety Configuration
DRY_RUN=true  # IMPORTANT: Start in dry-run mode
MAX_ACTIONS_PER_HOUR=10
MAX_ACTIONS_PER_DAY=50
MAX_SERVICE_RESTARTS=3
COOLDOWN_PERIOD=300  # 5 minutes in seconds
REQUIRE_APPROVAL_THRESHOLD=medium  # low, medium, high, critical

# Blast Radius Control
MAX_INSTANCES_AFFECTED=1
MAX_PERCENTAGE_AFFECTED=20  # percentage
MIN_ACTION_DELAY=300  # 5 minutes between major actions

# Anomaly Detection Configuration
ANOMALY_DETECTION_METHOD=statistical  # statistical, ml, hybrid
ERROR_RATE_THRESHOLD=5.0  # percentage
RESPONSE_TIME_THRESHOLD=1000  # milliseconds
CPU_THRESHOLD=80  # percentage
MEMORY_THRESHOLD=90  # percentage
DISK_THRESHOLD=85  # percentage

# Incident Management
AUTO_ESCALATE_AFTER=1800  # 30 minutes
INCIDENT_RETENTION_DAYS=90
ENABLE_AUTO_POSTMORTEM=true

# Alerting Configuration
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#incidents

ENABLE_PAGERDUTY=false
PAGERDUTY_API_KEY=
PAGERDUTY_SERVICE_ID=

ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=guardian@example.com
EMAIL_TO=oncall@example.com

# Runbook Configuration
RUNBOOK_DIR=./runbooks
ENABLE_RUNBOOK_EXECUTION=true
RUNBOOK_TIMEOUT=600  # 10 minutes

# Database Configuration (for incident tracking)
DATABASE_URL=sqlite:///./production_guardian.db
# Or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/production_guardian

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_OUTPUT=console  # console, file, both
LOG_FILE=./production_guardian.log

# Metrics Export
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9091

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60  # seconds
CIRCUIT_BREAKER_HALF_OPEN_TIMEOUT=30  # seconds

# Testing Configuration
ENABLE_SYNTHETIC_ERRORS=false  # Only for testing
SYNTHETIC_ERROR_RATE=0.0
