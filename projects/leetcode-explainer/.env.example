# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# LeetCode Configuration (optional - for fetching problems/solutions)
LEETCODE_SESSION=your-leetcode-session-cookie
LEETCODE_CSRF_TOKEN=your-csrf-token

# Application Settings
DEFAULT_EXPLANATION_LEVEL=3
ENABLE_CACHING=true
CACHE_DIR=.cache/explanations
CACHE_TTL_DAYS=30

# Integration with other tools
GAMIFICATION_ENDPOINT=http://localhost:8000
SESSION_ANALYZER_DB=../leetcode-session-analyzer/sessions.db
PATTERN_TRAINER_PATH=../leetcode-pattern-trainer

# Output preferences
COLOR_OUTPUT=true
ENABLE_EMOJI=true
EXPORT_FORMAT=markdown  # markdown, json, html

# Debug
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/explainer.log
