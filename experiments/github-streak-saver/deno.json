{
  "tasks": {
    "generate": "deno run --allow-read --allow-write --allow-env src/generate_note.ts",
    "test": "deno test --allow-read --allow-write",
    "dev": "deno run --watch --allow-read --allow-write --allow-env src/generate_note.ts"
  },
  "imports": {
    "@std/datetime": "jsr:@std/datetime@^0.224.0",
    "@std/path": "jsr:@std/path@^1.0.2",
    "@std/fs": "jsr:@std/fs@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
